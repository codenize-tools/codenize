#!/usr/bin/env ruby
$: << File.expand_path('../../lib', __FILE__)

require 'thor'
require '<%= @name %>'
require '<%= @name %>/cli'

debug = ARGV.any? {|i| i == '--debug' }

begin
  <%= @const_name %>::CLI.start(ARGV)
rescue => e
  if debug
    raise e
  else
    $stderr.puts "ERROR: #{e}".red
  end
end
